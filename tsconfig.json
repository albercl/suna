{
    "compilerOptions": {
        "target": "ES2022",
        "module": "CommonJS",
        "outDir": "dist",
        "inlineSourceMap": true,
        "inlineSources": true,
        "strict": true,
        "moduleResolution": "NodeNext",
        "esModuleInterop": true
    },
    "include": [
        "./src/**/*.ts",
        "./src/**/*.mts"
    ],
    "exclude": [
        "node_modules"
    ]
}